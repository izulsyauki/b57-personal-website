<!DOCTYPE html>
<html lang="en">

<head>
	<meta charset="UTF-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>Add My Project</title>

	<!-- Bootstrap -->
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />

	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" />
	<!-- /Bootstrap -->

	<link rel="stylesheet" href="/assets/styles/style.css" />
</head>

<body>
	<!-- Navbar -->
	{{>navbar}}
	{{>alert}}

	<!-- Input Form New-->
	<section
		class="d-flex col-10 mt-5 m-3 p-4 bg-white gap-5 align-self-center rounded-4 justify-content-center m-md-5 p-md-5 col-md-6">
		<form id="projectForm" action="/add-project" method="post" class="h-auto w-100">
			{{!-- --}}
			<h2 class="fw-bold text-center mb-4">Add My Project</h2>

			<!-- Title -->
			<div class="mb-3">
				<label for="inputTitle" class="form-label">Title</label>
				<input type="text" class="form-control h-auto" placeholder="Input youre project title here"
					name="inputTitle" id="inputTitle" aria-describedby="help" required />
			</div>

			<!-- Date -->
			<div class="mb-3">
				<div class="d-flex gap-4">
					<div class="w-50">
						<label for="startDate" class="form-label">Start Date</label>
						<input type="date" name="startDate" class="form-control h-auto" />
					</div>

					<div class="w-50">
						<label for="endDate" class="form-label">End Date</label>
						<input type="date" name="endDate" class="form-control h-auto" />
					</div>
				</div>
			</div>

			<!-- Description -->
			<div class="mb-3">
				<label for="description" class="form-label">Description</label>
				<textarea class="form-control h-auto" placeholder="Input youre description" name="description" rows="3"
					required></textarea>
			</div>

			<!-- Checkbox -->
			<div class="d-flex flex-column gap-3 mb-3">
				<label class="ms-3 mb-1">Technologies</label>
				<div class="row ms-2">
					{{#each tech as | tech |}}
						<div class="col col-md-6 mb-2">
							<div class="form-check w-50">
								<input class="form-check-input" type="checkbox" value="{{tech.key}}" id="form-stack-{{@index}}"
									name="technologies"/>
								<label class="form-check-label" for="form-stack-{{@index}}">
									{{tech.name}}
								</label>
							</div>
						</div>
					{{/each}}
				</div>
			</div>

			<!-- Upload image -->
			<div class="mb-3">
				<label for="uploadImage" class="form-label">Upload Image</label>
				<img src="" id="imagePreview" alt="Image Preview" class="img-fluid rounded-2 w-25 mb-3"
					style="display: none;" />
				<input class="form-control" type="file" name="uploadImage" id="uploadImage" />
			</div>

			<!-- Submit -->
			<div class="mt-4 mb-3">
				<button type="submit" class="btn btn-dark w-100">Submit</button>
			</div>
		</form>
	</section>

	<!-- Bootstrap -->
	<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
		integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
		crossorigin="anonymous"></script>
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js"
		integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy"
		crossorigin="anonymous"></script>
	<!-- /Bootstrap -->

	<script src="/assets/js/add-projects.js"></script>
	<script src="/assets/js/script.js"></script>
	<script src="/assets/js/alert.js"></script>
</body>

</html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Add My Project</title>

    <!-- Bootstrap -->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
    />

    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css"
    />
    <!-- /Bootstrap -->

    <link rel="stylesheet" href="/assets/styles/style.css" />
  </head>
  <body>
    <!-- Navbar -->
    <nav class="navbar navbar-dark navbar-expand-lg fixed-top bg-dark">
      <div class="container-fluid">
        <a class="navbar-brand text-white" href="/">Izulsyauki</a>
        <button
          class="navbar-toggler border border-1"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarSupportedContent"
          aria-controls="navbarSupportedContent"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav ms-auto me-2 mb-lg-0 pe-1">
            <li class="nav-item">
              <a
                class="nav-link text-white"
                aria-current="page"
                href="/"
              >Home</a>
            </li>
            <li class="nav-item">
              <a class="nav-link text-white fw-bold" href="/add-project">Add
                Project</a>
            </li>
            <li class="nav-item">
              <a class="nav-link text-white" href="/testimoni">Testimoni</a>
            </li>
          </ul>
          <button class="btn btn-light" type="submit">Contact Me</button>
        </div>
      </div>
    </nav>

    <!-- My Project -->

    <section class="d-flex flex-column bg-white pt-4 pb-4 p-5 m-5 rounded-4">
      <h2 class="fw-bold text-center mb-4">Project Detail</h2>
      <div class="d-flex flex-column gap-4" id="myPojects">
        {{! adding automatically project using handlebars }}
        <div class="d-flex gap-3">
          <img
            src="{{project.image}}"
            class="object-fit-cover w-25 rounded-3"
            alt=""
          />

          <div
            class="card-body d-flex flex-column justify-content-between"
            style="height: 320px"
          >
            <h4 class="card-title">{{project.title}}</h4>
            <p
              class="card-text mt-0 mb-3 text-start text-secondary"
            >{{project.duration}}</p>
            <p
              class="card-desc align-items-start overflow-y-hidden"
              id="description"
            >
              {{project.description}}
            </p>

            <div class="d-flex gap-2 mt-1 mb-3">
              {{#each project.technologies}}
                <span
                  class="badge border border-secondary border-1 text-secondary"
                >{{this}}</span>
              {{/each}}
            </div>

            <div class="d-flex gap-2 ms-auto w-25">
              <a
                href="/edit-project/{{id}}"
                class="btn btn-outline-dark w-50"
              >Edit</a>
              <a
                href="/delete-project/{{id}}"
                class="btn btn-dark w-50"
                id="buttonDelete"
              >Delete</a>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Bootstrap -->
    <script
      src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
      integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js"
      integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy"
      crossorigin="anonymous"
    ></script>
    <!-- /Bootstrap -->

    <script src="assets/js/script.js"></script>
  </body>
</html>
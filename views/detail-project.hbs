<html lang="en">

<head>
	<meta charset="UTF-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>Details Project</title>

	<!-- Bootstrap -->
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />

	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" />
	<!-- /Bootstrap -->

	<link rel="stylesheet" href="/assets/styles/style.css" />
</head>

<body>
	<!-- Navbar -->
	{{>navbar}}
	{{>alert}}

	<!-- My Project -->
	<section class="d-flex flex-column bg-white pt-3 pb-3 p-4 m-4 rounded-4 p-sm-5 m-sm-5">
		<h2 class="fw-bold text-center mb-4">Project Detail</h2>
		<div class="d-flex flex-column gap-4 position-relative" id="myPojects">
			
			<div class="d-flex flex-column flex-md-row gap-4">
				<img src="{{result.image}}" class="object-fit-cover rounded-3 col-12 col-md-4" alt="Image Project"
					style="height: 350px; max-height: 350px;" />

				<div class="card-body d-flex flex-column w-100 gap-2" style="height: 100%">
					<h3 class="card-title">{{result.title}}</h3>
					<p class="card-text text-start p-0 m-0"><i class="bi bi-calendar-range"></i> Start: {{result.startDate}}, End: {{result.endDate}}</p>
					{{#if user}}
					<p class="card-text text-start p-0 m-0">Created at: {{formatDate result.createdAt}} Author: {{result.user.name}}</p>
					{{/if}}
					<p class="card-text mt-0 mb-1 text-start text-secondary">{{result.duration}}</p>
					<p class="card-desc" id="description" style="height: 40%;">
						{{result.description}}
					</p>

					<div class="d-flex gap-2 mt-1 mb-1">
						{{#each result.technologies as | tech |}}
						<span class="badge border border-secondary border-1 text-secondary">{{getTechName tech}}</span>
						{{/each}}
					</div>

					{{#if user}}
					<div class="d-flex justify-content-end m-0 p-0">
						<div class="d-flex gap-2 col-12 col-md-4">
						<a href="/edit-project/{{result.id}}" class="btn btn-outline-dark w-50">Edit</a>
						<a href="/delete-project/{{result.id}}" class="btn btn-dark w-50" id="buttonDelete">Delete</a>
					</div>
					</div>
					{{/if}}
				</div>
			</div>
		</div>
	</section>

	<!-- Bootstrap -->
	<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
		integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
		crossorigin="anonymous"></script>
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js"
		integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy"
		crossorigin="anonymous"></script>
	<!-- /Bootstrap -->

	<script src="assets/js/script.js"></script>
	<script src="/assets/js/alert.js"></script>
</body>

</html>
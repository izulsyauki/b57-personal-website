<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Add My Project</title>

    <!-- Bootstrap -->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
    />

    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css"
    />
    <!-- /Bootstrap -->

    <link rel="stylesheet" href="/assets/styles/style.css" />
  </head>
  <body>
    <!-- Navbar -->
    {{>navbar}}

    <!-- My Project -->

    <section class="d-flex flex-column bg-white pt-4 pb-4 p-5 m-5 rounded-4">
      <h2 class="fw-bold text-center mb-4">Project Detail</h2>
      <div class="d-flex flex-column gap-4 position-relative" id="myPojects">
        {{! adding automatically project using handlebars }}
        <div class="d-flex gap-4">
          <img
            src="{{project.image}}"
            class="object-fit-cover w-25 rounded-3"
            alt=""
          />

          <div
            class="card-body d-flex flex-column w-100 gap-3"
            style="height: 320px"
          >
            <h4 class="card-title">{{project.inputTitle}}</h4>
            <p
              class="card-text mt-0 mb-3 text-start text-secondary"
            >{{project.duration}}</p>
            <p
              class="card-desc"
              id="description"
              style="height: 40%;"
            >
              {{project.description}}
            </p>

            <div class="d-flex gap-2 mt-1 mb-1">
              {{#each project.technologies}}
                <span
                  class="badge border border-secondary border-1 text-secondary"
                >{{this}}</span>
              {{/each}}
            </div>

            {{!-- <div class="container align-self-end"> --}}
              <div class="d-flex gap-2 w-25 position-absolute bottom-0 end-0">
              <a
                href="/edit-project/{{id}}"
                class="btn btn-outline-dark w-50"
              >Edit</a>
              <a
                href="/delete-project/{{id}}"
                class="btn btn-dark w-50"
                id="buttonDelete"
              >Delete</a>
            {{!-- </div> --}}
            
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Bootstrap -->
    <script
      src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
      integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js"
      integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy"
      crossorigin="anonymous"
    ></script>
    <!-- /Bootstrap -->

    <script src="assets/js/script.js"></script>
  </body>
</html>
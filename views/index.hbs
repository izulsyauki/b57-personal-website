<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>My Personal Website</title>

    <!-- Bootstrap -->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
    />

    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css"
    />
    <!-- /Bootstrap -->

    <link rel="stylesheet" href="/assets/styles/style.css" />
  </head>
  <body>
    {{>navbar}}

    <!-- Content -->
    <section class="d-flex mt-2 mb-2 justify-content-center">
      <div
        class="d-flex flex-column p-4 m-4 rounded-4 gap-5 flex-md-row p-sm-5 m-sm-5 bg-white"
      >
        <div class="d-flex flex-column gap-3 w-auto justify-content-center">
          <h1 class="text-dark">
            Hello folks! Welcome to My Hut
            <i class="bi bi-rocket-takeoff-fill"></i>
          </h1>
          <p>
            An information engineering student who is very enthusiastic about
            studying technology and has a high interest in programming, design
            and science. Intending to become a professional full stack
            programmer by following various courses and training in this field
            and programming, makes me better prepared to enter the professional
            world by utilizing my strengths in having a technology and design
            educational background.
          </p>

          <div class="d-flex mb-3 align-items-center">
            <a href="/contact-me">
              <button type="button" class="btn btn-dark">Contact Me</button>
            </a>
            <a
              class="link-dark align-text-bottom ms-3"
              href="https://drive.google.com/open?id=1FeqI2X5xPYh3qb35GfrIw5BGgpq_IBiB&usp=drive_fs"
              target="_blank"
              rel="noopener noreferrer"
            >
              My Resume!!
            </a>
          </div>

          <div class="d-flex gap-3">
            <a
              class="text-dark fs-2"
              href="https://github.com/izulsyauki"
              target="_blank"
            ><i class="bi bi-github"></i></a>
            <a
              class="text-dark fs-2"
              href="https://www.linkedin.com/in/izulsyaukiimani"
              target="_blank"
            ><i class="bi bi-linkedin"></i></a>
            <a
              class="text-dark fs-2"
              href="https://www.instagram.com/izulsyauki/"
              target="_blank"
            ><i class="bi bi-instagram"></i></a>
            <a
              class="text-dark fs-2"
              href="https://www.facebook.com/izulsyauki/"
              target="_blank"
            ><i class="bi bi-facebook"></i></a>
          </div>
        </div>

        <div
          class="card shadow-lg align-self-center w-auto"
          style="width: 18rem"
        >
          <img
            src="assets/images/profile-image.jpg"
            class="card-img-top"
            alt="..."
          />
          <div class="card-body m-auto text-center">
            <h4 class="card-title fw-bold">Izulsyauki Imani</h4>
            <p class="card-text">Software Engineer</p>
          </div>
        </div>
      </div>
    </section>

    <!-- My Project -->

    <section class="d-flex flex-column bg-white p-5">
      <h2 class="fw-bold text-center mb-4">My Pojects</h2>
      <div class="d-flex gap-4" id="myPojects">
        {{! adding automatically project using handlebars }}
        {{#each dataProjects}}
          <div class="card shadow" onclick="detailProject('{{id}}')" style="width: 16rem; cursor: pointer">
            <img src="{{image}}" class="card-img-top object-fit-cover" alt="" />

            <div
              class="card-body gap-2 d-flex flex-column position-relative"
              style="height: 320px"
            >
              <h4 class="card-title">{{inputTitle}}</h4>
              <p
                class="card-text mt-0 mb-3 text-start text-secondary"
              >{{duration}}</p>
              <p
                class="card-desc align-items-start overflow-y-hidden h-50"
                id="description"
              >
                {{description}}
              </p>

              <div class="d-flex gap-2 mt-1 mb-1">
                {{#each technologies}}
                  <span
                    class="badge border border-secondary border-1 text-secondary"
                  >{{this}}</span>
                {{/each}}
              </div>

              <div class="d-flex gap-2 w-auto">
                <a
                  href="/edit-project/{{id}}"
                  class="btn btn-outline-dark w-50"
                >Edit</a>
                <a
                  href="/delete-project/{{id}}"
                  class="btn btn-dark w-50"
                  id="buttonDelete"
                >Delete</a>
              </div>
            </div>
          </div>
        {{/each}}
      </div>
    </section>

    <!-- Bootstrap -->
    <script
      src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
      integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js"
      integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy"
      crossorigin="anonymous"
    ></script>
    <!-- /Bootstrap -->

    <script src="/assets/js/script.js"></script>
    <script src="/assets/js/home.js"></script>
  </body>
</html>
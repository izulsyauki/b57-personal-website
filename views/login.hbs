<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login</title>

    <!-- Bootstrap -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" />
    <!-- /Bootstrap -->

    <link rel="stylesheet" href="/assets/styles/style.css" />
</head>

<body>
    {{>navbar}}
    {{>alert}}

    {{!-- Input Form --}}
    <section
        class="d-flex col-10 mt-5 m-3 p-4 bg-white gap-5 align-self-center rounded-4 justify-content-center m-md-5 p-md-5 col-md-6">
        <form action="/login" method="post" class="h-auto w-100">
            <h2 class="fw-bold text-center">Login</h2>

            <!-- Email -->
            <div class="mb-3">
                <label for="inputEmail" class="form-label">Email</label>
                <input type="text" class="form-control h-auto" placeholder="Input youre email" id="inputEmail" name="email"
                    aria-describedby="emailHelp" required />
            </div>

            <!-- Password -->
            <div class="mb-3">
                <label for="inputPhone" class="form-label">Password</label>
                <input type="password" class="form-control h-auto" placeholder="Type youre password" id="inputPass" name="password"
                    aria-describedby="passHelp" required />
            </div>

            <div class="mt-4 mb-3">
                <button type="submit" class="btn btn-dark w-100">Login</button>
            </div>

            <div class="text-center">Don't Have an Account? <a class="link-dark" href="/register">Register Here!</a></div>
        </form>
    </section>

    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
        integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js"
        integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy"
        crossorigin="anonymous"></script>
    <!-- /Bootstrap -->

    <script src="/assets/js/alert.js"></script>
</body>
</html>